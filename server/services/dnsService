const dns = require('dns');

function resolveCNAME(domain) {
  return new Promise((resolve, reject) => {
    dns.resolveCname(domain, (err, addresses) => {
      if (err) 
        return reject(`CNAME 조회 실패: ${err.message}`);
      resolve(addresses);
    });
  });
}

module.exports = {
  resolveCNAME
};